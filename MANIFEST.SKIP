# Skip version control directories
^\.git/
^\.github/

# Skip JetBrains / IDE configs
^\.idea/

# Skip git config files
^\.gitignore$
^\.gitattributes$

# Skip editor & temporary files
^_.*$
^.*/_.*$
~$
\.swp$
\.bak$
^MANIFEST\.bak$
\.DS_Store$

# Skip build artifacts
^blib/
^pm_to_blib$
^Makefile$
^Makefile\.old$
^MYMETA\.
^META\.(json|yml)$
^.*\.tar\.gz$

# Skip development-only directories
^test/
^venv/

# Skip perltidy config
^\.perltidyrc$
